<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>

<body>
    <div class="main w-full min-h-screen bg-zinc-900 flex flex-col items-center p-6">
        <!-- Form -->
        <div class="bg-zinc-800 shadow-lg rounded-2xl p-4 w-full max-w-2xl mb-6">
            <h2 class="text-xl font-bold mb-4 text-white text-center">Add Task</h2>
            <form action="/create" method="POST" class="space-y-3">
                <div>
                    <label for="title" class="block text-sm font-medium text-gray-300">Task
                        Title</label>
                    <input type="text" id="title" name="title" placeholder="Enter task title"
                        value="<%= fileToEdit ? fileToEdit.fileName.replace('.txt', '') : '' %>" <%=fileToEdit
                        ? 'readOnly' : '' %>
                    class="mt-1 block w-full rounded-xl border border-zinc-600 bg-zinc-900 text-gray-100
                    placeholder-gray-500 focus:border-indigo-500 focus:ring-indigo-500 p-2">
                </div>

                <div>
                    <label for="details" class="block text-sm font-medium text-gray-300">Task
                        Details</label>
                    <textarea id="details" name="details" rows="3" placeholder="Enter task details..."
                        class="mt-1 block w-full rounded-xl border border-zinc-600 bg-zinc-900 text-gray-100 placeholder-gray-500 focus:border-indigo-500 focus:ring-indigo-500 p-2"><%= fileToEdit ? fileToEdit.data : '' %></textarea>
                </div>

                <button type="submit"
                    class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-2 rounded-xl shadow-md transition">
                    <%= fileToEdit ? 'Update Task' : 'Add Task' %>
                </button>
            </form>
        </div>

        <!-- Tasks Section -->
        <div class="w-full max-w-2xl space-y-4">
            <% if(!files?.length){ %>
                <p class="text-gray-400 text-center font-bold">No tasks yet!!</p>
                <% } else { %>
                    <% files.forEach(file=> { %>
                        <div class="bg-zinc-800 shadow-lg rounded-2xl p-4 h-40 flex flex-col justify-between">
                            <!-- File Name -->
                            <h2 class="text-lg font-semibold text-white truncate">
                                <%= file %>
                            </h2>

                            <!-- Buttons -->
                            <div class="mt-2 flex justify-end gap-2">
                                <!-- Read More -->
                                <a href='/readfile/<%= file %>'
                                    class="bg-blue-600 hover:bg-blue-700 text-white text-sm px-3 py-1.5 rounded-lg shadow transition">
                                    Read More...
                                </a>

                                <!-- Edit -->
                                <a href='/editfile/<%= file %>'
                                    class="bg-green-600 hover:bg-green-700 text-white text-sm px-3 py-1.5 rounded-lg shadow transition">
                                    Edit
                                </a>

                                <!-- Delete -->
                                <a href='/deletefile/<%= file %>'
                                    class="bg-red-600 hover:bg-red-700 text-white text-sm px-3 py-1.5 rounded-lg shadow transition">
                                    Delete
                                </a>
                            </div>
                        </div>

                        <% }) %>
                            <% } %>
        </div>

    </div>

    <script src="/javascript/script.js"></script>
</body>

</html>